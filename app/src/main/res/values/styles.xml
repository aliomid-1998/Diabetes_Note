<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadTexts" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textColor">#4A5151</item>
        <item name="fontFamily">@font/bnaznnbold</item>
        <item name="android:layout_marginTop">@dimen/dp6</item>
    </style>
    <style name="Texts" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/bnazanin</item>
        <item name="android:layout_marginTop">@dimen/dp6</item>
    </style>

    <style name="EdittextsAdd" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/sp21</item>
        <item name="android:textColorHint">#8B9297</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/bnazanin</item>

    </style>

    <style name="TextsAdd" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/sp21</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/bnaznnbold</item>

    </style>

    <style name="mainButtons" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">#D1E326</item>
        <item name="android:textSize">@dimen/sp21</item>
        <item name="fontFamily">@font/bnazanin</item>
    </style>

</resources>